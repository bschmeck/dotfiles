AMASTER=`amixer get Master | awk 'END{gsub(/\[|\]|%/,""); print $5}'`
ASTAT=`amixer get Master | awk 'END{gsub(/\[|\]|%/,""); print $6}'`
ICON=""


if [[ $ASTAT = "on" ]]; then
    ICON="spkr_on.xbm"
    PERCBAR=`echo -e "$AMASTER"\
        | dzen2-gdbar -bg "#393939" -fg "#d6d6d6" -h 1 -w 60`
else
    ICON="spkr_mute.xbm"
    PERCBAR=`echo 0\
        | dzen2-gdbar -bg "#393939" -fg "#d6d6d6" -h 1 -w 60`
fi


ICON='^i(/home/bschmeck/.xmonad/xbm16x16/'"$ICON)"
echo "$ICON $PERCBAR"
